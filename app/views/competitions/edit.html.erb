<div>
  <h1 class="font-bold text-4xl">Competitions#edit</h1>
</div>
<h1>Редактировать соревнование</h1>
<%= form_with model: @competition do |form| %>
  <div>
    <%= form.label :name, "Название" %>
    <%= form.text_field :name, required: true %>
  </div>
  <div>
    <%= form.label :min_athlete_weight, "Минимальный вес" %>
    <%= form.number_field :min_athlete_weight, required: true %>
  </div>
  <div>
    <%= form.label :max_athlete_weight, "Максимальный вес" %>
    <%= form.number_field :max_athlete_weight, required: true %>
  </div>
  <%= form.submit "Сохранить изменения" %>
<% end %>
